<% # Header %>
<header class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container">
    <a class="navbar-brand" href="/">WRS Garage</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/categories">Categories</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/cars">Search</a>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <a class="nav-link" href="/profile">Profile</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= destroy_user_session_path %>" data-method="delete">Logout</a>
          </li>
        <% else %>
          <li class="nav-item">
            <a class="nav-link" href="/users/sign_in">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/sign_up">Sign Up</a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>

<% # Hero Section %>
<section class="hero bg-primary text-white text-center py-5">
  <div class="container">
    <h1 class="display-4">Find Your Dream Car</h1>
    <p class="lead">Explore a wide range of vehicles tailored to your preferences.</p>
    <a href="/cars" class="btn btn-light btn-lg">Browse Listings</a>
  </div>
</section>

<% # Featured Categories %>
<section class="categories py-5">
  <div class="container">
    <h2 class="text-center mb-4">Popular Categories</h2>
    <div class="row">
      <% ["SUVs", "Sedans", "Trucks"].each do |category| %>
        <div class="col-md-4 text-center">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= category %></h5>
              <a href="/categories?name=<%= category %>" class="btn btn-primary">Explore</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<% # Featured Listings %>
<section class="listings py-5 bg-light">
  <div class="container">
    <h2 class="text-center mb-4">Featured Cars</h2>
    <div class="row">
      <% 3.times do |i| %>
        <div class="col-md-4">
          <div class="card">
            <img src="https://via.placeholder.com/350x150" class="card-img-top" alt="Car Image">
            <div class="card-body">
              <h5 class="card-title">Car Make and Model <%= i + 1 %></h5>
              <p class="card-text">Price: $<%= (i + 1) * 10_000 %></p>
              <a href="/cars/<%= i + 1 %>" class="btn btn-primary">View Details</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<% # Footer %>
<footer class="bg-dark text-white text-center py-3">
  <p>&copy; <%= Date.current.year %> WRS Garage. All rights reserved.</p>
</footer>
