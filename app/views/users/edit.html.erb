<h2>Edit Profile</h2>

<%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :province %>
    <%= f.select :province_id, Province.all.collect { |p| [p.name, p.id] }, { include_blank: "Select Province" }, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Update Profile", class: "btn btn-primary" %>
  </div>
<% end %>
